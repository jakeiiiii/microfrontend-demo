{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "mfe-angular20-c": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "mfe-angular20-c:build-esbuild:production"
          },
          "configurations": {
            "production": {
              "target": "mfe-angular20-c:build-esbuild:production"
            },
            "development": {
              "target": "mfe-angular20-c:build-esbuild:development",
              "dev": true
            }
          },
          "defaultConfiguration": "production"
        },
        "build-esbuild": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "polyfills": [],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "none"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:dev-server",
          "options": {
            "target": "mfe-angular20-c:serve-original:development"
          },
          "configurations": {
            "production": {
              "target": "mfe-angular20-c:serve-original:production"
            },
            "development": {
              "target": "mfe-angular20-c:serve-original:development",
              "dev": true
            }
          },
          "defaultConfiguration": "development"
        },
        "serve-original": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "mfe-angular20-c:build-esbuild:production"
            },
            "development": {
              "buildTarget": "mfe-angular20-c:build-esbuild:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
